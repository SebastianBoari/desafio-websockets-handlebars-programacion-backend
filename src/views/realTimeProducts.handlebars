<section id="products" class="container">

    <div id="title">
        <h1>Productos en tiempo real</h1>
        
    </div>
    
    <div id="form-container" class="bg-secondary">
        <h2>Agregue un Producto:</h2>
        
        <form id="form" action="/realTimeProducts" method="post">

            <input class="form-control" id="titleInput" name="title" type="text" placeholder="Título" >

            <input class="form-control" id="priceInput" name="price" type="number" placeholder="Precio">

            <input class="form-control" id="codeInput" name="code" type="text" placeholder="Código">

            <input class="form-control" id="stockInput" name="stock" type="number" placeholder="Stock">

            <textarea class="form-control" id="descripInput" placeholder="Descripcion" style="height: 100px"></textarea>
            
            <div class="fileInput-label">
                <input id="fileInput" name="thumbnail" type="file">
                <label for="fileInput">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24"><path fill="currentColor" d="M12 16q-.425 0-.713-.288T11 15V7.85L9.125 9.725q-.3.3-.7.3T7.7 9.7q-.3-.3-.287-.712T7.7 8.3l3.6-3.6q.15-.15.325-.212T12 4.425q.2 0 .375.063t.325.212l3.6 3.6q.3.3.288.713T16.3 9.7q-.3.3-.713.313t-.712-.288L13 7.85V15q0 .425-.288.713T12 16Zm-6 4q-.825 0-1.413-.588T4 18v-2q0-.425.288-.713T5 15q.425 0 .713.288T6 16v2h12v-2q0-.425.288-.713T19 15q.425 0 .713.288T20 16v2q0 .825-.588 1.413T18 20H6Z"/></svg>
                    <p>Imágenes del producto</p>
                </label>
            </div>
       
            <div class="statusInput-label">
                <input id="statusInput" name="status" type="checkbox">
                <label for="statusInput">Status</label>
            </div>

            <div id="submitInput-container" >
                <input id="submitInput" type="submit" value="Enviar">
            </div>
        </form>
    </div>

    <div id="products-container">

        {{#each products}}
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src={{this.thumbnail.[0]}} class="img-fluid rounded-start" alt={{this.description}}>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <p class="card-text">${{this.price}}</p>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</section>